<div class="au-c-pagination au-u-margin-top">
  {{#if @hasPreviousPage}}
    <div class="au-c-pagination__list-item">
      <button class="au-c-link" {{on 'click' @goToPreviousPage}}><AuIcon @icon="nav-left" @alignment="left" /> Vorige pagina</button>
    </div>
  {{/if}}
  <p>
    <span class="au-u-hidden-visually">Publicaties</span>
    <strong>
      {{@pageStart}} - {{@pageEnd}}
    </strong>
    van
    {{@count}}
  </p>
  {{#if @hasNextPage}}
    <div class="au-c-pagination__list-item">
      <button class="au-c-link" {{on 'click' @goToNextPage}}>Volgende pagina <AuIcon @icon="nav-right" @alignment="right" /></button>
    </div>
  {{/if}}
</div>