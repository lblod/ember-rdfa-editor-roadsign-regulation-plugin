{{#if this.showCard}}
<AuCard @flex={{true}} @divided={{true}} @expandable={{true}} @isOpenInitially={{true}} @shadow={{true}} @size="small" as |c|>
  <c.header>
    <AuHeading @level="3" @skin="6">
      Mobiliteitsmaatregel
    </AuHeading>
  </c.header>
  <c.content>
    <AuButton {{on "click" this.toggleModal}} @icon="plus-text" @iconAlignment="left" @skin="link-secondary">
      Voeg mobiliteitsmaatregel in
    </AuButton>
    {{#if this.isInsideMeasure}}
      <br />
      <AuButton {{on "click" this.insertLocation}} @icon="plus-text" @iconAlignment="left" @skin="link-secondary">
        Voeg locatie in
      </AuButton>
    {{/if}}
  </c.content>
</AuCard>
{{/if}}
<RoadsignsModal @modalOpen={{this.modalOpen}} @closeModal={{this.toggleModal}} @controller={{@controller}} @insert={{this.insert}}/>
